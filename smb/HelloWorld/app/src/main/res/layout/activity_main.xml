<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_dzielonalista"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="204dp"
        android:text="@string/dzielona_lista_produktow"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mojalista" />

    <Button
        android:id="@+id/bt_mojalista"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="111dp"
        android:text="@string/moja_lista_produktow"
        app:layout_constraintBottom_toTopOf="@+id/bt_dzielonalista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_wyloguj"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="false"
                android:text="@string/wyloguj"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="1dp" />
        <Button
            android:id="@+id/bt_ustawienia"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:text="@string/ustawienia"
            android:layout_alignParentEnd="true"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="1dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>